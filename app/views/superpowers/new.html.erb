<div class="container col-6 mt-10 form">
  <h3>Create a new superpower</h3>
  <%= simple_form_for [ @superpower ] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price, as: :numeric %>
    <%= f.input :category, collection: Superpower::CATEGORIES %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create superpower", class: "link" %>
  <% end %>
</div>
